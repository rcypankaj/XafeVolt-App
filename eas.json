{
  "cli": {
    "version": ">= 15.0.15",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production-apk": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk",
        "credentialsSource": "local",
        "keystore": {
          "keystorePath": "./keystore.jks",
          "keystorePassword": "${KEYSTORE_PASSWORD}",
          "keyAlias": "${KEY_ALIAS}",
          "keyPassword": "${KEY_PASSWORD}"
        }
      }
    }
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk",
        "credentialsSource": "local",
        "keystore": {
          "keystorePath": "./keystore.jks",
          "keystorePassword": "${KEYSTORE_PASSWORD}",
          "keyAlias": "${KEY_ALIAS}",
          "keyPassword": "${KEY_PASSWORD}"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}
